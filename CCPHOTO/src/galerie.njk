---
title: Galerie
description : "Galerie de photos"
layout : "layout.njk"
logo : "../img/Logo.jpg"
root : "."
accueilUnder : ""
galerieUnder : "text-decoration-underline"
tarifsUnder : ""
contactUnder : ""
---

  <!--menu-->
  <nav class="navbar navbar-expand-md">
    <div class="container-fluid">
      <span class="navbar-brand d-md-none" id="navbarBrandCategory">Choisir une catégorie</span>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContentCategory">
        <span class="mobilemenu">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
          </svg>
        </span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContentCategory">
        <div class="navbar-nav w-100 mt-3">
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="marryButton">Mariage</button>
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="pregButton">Grossesse</button>
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="babyButton">Bébé</button>
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="famillyButton">Famille</button>
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="baptismButton">Baptême</button>
          <button type="button" class="categoryButton nav-item ms-md-auto me-md-auto" id="coupleButton">Couple</button>
        </div>
      </div>
    </div>
  </nav>

  <!--pictures display-->
  <div class="container-fluid">
        <ul class="row list-unstyled align-items-center" id="gallery">
        </ul>
  </div>

  <script>

    const marryButton = document.getElementById("marryButton");
    const pregButton = document.getElementById("pregButton");
    const babyButton = document.getElementById("babyButton");
    const familyButton = document.getElementById("familyButton");
    const baptismButton = document.getElementById("baptismButton");
    const coupleButton = document.getElementById("coupleButton");
    const buttons = document.querySelectorAll(".categoryButton");

    const gallery = document.getElementById("gallery");

    //Adding 'active' class to the button selected and displaying pictures
    buttons.forEach( (button) => {
      button.addEventListener("click", (e) => {
        buttons.forEach( (btn) => {
          btn.classList.remove("active");
        });
        e.target.classList.add("active");
        gallery.textContent = "";
        for (let i=1; i<10; i++) {
          let img = document.createElement("img");
          img.src = `../img/galerie/${e.target.innerHTML+i}.jpg`;
          img.classList.add("img-fluid");
          let li = document.createElement("li");
          li.classList.add("col-12", "col-md-4", "mt-3");
          li.appendChild(img);
          gallery.appendChild(li);
          console.log(img.src);
        };
      });
    });

  </script>
